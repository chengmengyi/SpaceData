<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="211dp">
    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/native_ad_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:background="@drawable/bg_fff_12dp">
            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/native_ad_cover"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/native_ad_logo"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="23dp"
                android:layout_height="14dp"
                android:src="@drawable/home_tag"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/native_ad_logo"
                android:layout_width="38dp"
                android:layout_height="38dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_ad_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Boom Beach"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="@id/native_ad_logo"
                app:layout_constraintLeft_toRightOf="@id/native_ad_logo"
                app:layout_constraintRight_toLeftOf="@id/native_ad_btn"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_ad_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="12sp"
                android:textColor="#B6B6B6"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="start to build your islandâ€¦ "
                app:layout_constraintLeft_toRightOf="@id/native_ad_logo"
                app:layout_constraintRight_toLeftOf="@id/native_ad_btn"
                app:layout_constraintTop_toBottomOf="@id/native_ad_title"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_ad_btn"
                android:layout_width="78dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:text="Install"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_266dff_8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/native_ad_logo"
                app:layout_constraintBottom_toBottomOf="@id/native_ad_logo"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_ad_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/home_ad_cover"/>
</RelativeLayout>